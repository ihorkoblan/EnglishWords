<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.company.ihor.wordlearner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">

        <activity android:name="com.company.ihor.wordlearner.MainActivity">
            <intent-filter>
                <action android:name = "android.intent.action.MAIN" />
                <category android:name = "android.integory.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.company.ihor.wordlearner.AddWordsActivity"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
